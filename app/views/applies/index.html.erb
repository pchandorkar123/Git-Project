<p id="notice"><%= notice %></p>



<h1>Apply for job</h1>
<br>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Contact-no</th>
      <th>Experience</th>
      <th>Expected-salary</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @applies.each do |apply| %>
     <% if apply.worker == current_user %>
      <tr>
        <td><%= apply.name %></td>
        <td><%= apply.contact %></td>
        <td><%= apply.experience %></td>
        <td><%= apply.expectedSalary %></td>
        <td><%= link_to 'Show', apply %></td>
        <td><%= link_to 'Edit', edit_apply_path(apply) %></td>
        <td><%= link_to 'Cancel', apply, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <%end%>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Apply for job', new_apply_path %>
